{
  "compilerOptions": {
    "strict": true,

    "lib": ["es2022"],
    "target": "es2022",

    "moduleResolution": "nodenext",
    "module": "nodenext",

    "outDir": "dist",

    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  }
}